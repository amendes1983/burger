<h1>Burgers!</h1>

<h2>Burgers that need to be eaten!</h2>

<ul>
    {{#each burgers}} {{#unless this.devoured}}
    <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">DEVOUR!</button>
        </form>

        
    </li>
    {{/unless}} {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
    {{#each burgers}} {{#if this.devoured}}
    <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">THROW UP!</button>
        </form>

     
    </li>
    {{/if}} {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devo">Devour?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devour!<br>
        <input type="radio" name="devoured" value="0"> Throw up
    </div>

    <button type="submit">Add Burger</button>
</form>